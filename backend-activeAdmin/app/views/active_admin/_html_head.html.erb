<%= stylesheet_link_tag "active_admin" %>
<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.5.1/css/all.min.css", media: "all" %>
<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/easymde@2.18.0/dist/easymde.min.css", media: "all" %>
<meta name="viewport" content="width=device-width,initial-scale=1">
<%= csrf_meta_tags %>
<%= csp_meta_tag %>
<% # On page load or when changing themes, best to add inline in `head` to avoid FOUC %>
<%= javascript_tag nonce: true do %>
  if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
    document.documentElement.classList.add('dark')
  } else {
    document.documentElement.classList.remove('dark')
  }
<% end %>
<%= javascript_include_tag "https://cdn.jsdelivr.net/npm/easymde@2.18.0/dist/easymde.min.js", defer: true %>
<%= javascript_include_tag "active_admin_markdown_editor", defer: true %>
<%= javascript_importmap_tags "active_admin", importmap: ActiveAdmin.importmap %>
